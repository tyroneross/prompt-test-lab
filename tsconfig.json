{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@prompt-lab/shared": ["./packages/shared/src"],
      "@prompt-lab/shared/*": ["./packages/shared/src/*"]
    }
  },
  "references": [
    { "path": "./packages/api" },
    { "path": "./packages/web" },
    { "path": "./packages/shared" },
    { "path": "./packages/sdk" }
  ],
  "include": [],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build"
  ]
}