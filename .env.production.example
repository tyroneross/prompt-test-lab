# =============================================================================
# PROMPT TESTING LAB - PRODUCTION Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your actual production values
# Store secrets in your hosting provider's environment variable system
# NEVER commit production secrets to version control

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=production
PORT=8080
APP_URL=https://your-api-domain.com

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Production PostgreSQL (Supabase, Railway, etc.)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =============================================================================
# AUTHENTICATION (REQUIRED)
# =============================================================================
# Strong JWT secret (minimum 32 characters, use random generator)
JWT_SECRET=your-super-strong-jwt-secret-32-chars-minimum
JWT_EXPIRES_IN=24h

# =============================================================================
# SECURITY (REQUIRED)
# =============================================================================
# Production CORS origins (your frontend domains)
ALLOWED_ORIGINS=https://your-app-domain.com,https://your-admin-domain.com

# Rate limiting for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LLM PROVIDERS (AT LEAST ONE REQUIRED)
# =============================================================================
# OpenAI (recommended for production)
OPENAI_API_KEY=sk-your-production-openai-key

# Groq (cost-effective alternative)
GROQ_API_KEY=gsk_your-production-groq-key

# Anthropic (optional)
ANTHROPIC_API_KEY=sk-ant-your-production-anthropic-key

# =============================================================================
# MONITORING & OBSERVABILITY (RECOMMENDED)
# =============================================================================
# Health check configuration
HEALTH_CHECK_ENABLED=true

# Logging level
LOG_LEVEL=warn

# Error tracking (Sentry recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PERFORMANCE & SCALING (OPTIONAL)
# =============================================================================
# Database connection pool
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Request timeout (30 seconds)
REQUEST_TIMEOUT=30000

# Maximum request size (10MB)
MAX_REQUEST_SIZE=10485760

# Redis for caching/queue (optional but recommended)
REDIS_URL=redis://your-redis-host:6379

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_CACHING=true

# =============================================================================
# MINIMUM REQUIRED VARIABLES FOR PRODUCTION
# =============================================================================
# These are the absolute minimum variables needed:
# DATABASE_URL=postgresql://...
# JWT_SECRET=32-char-minimum-random-string
# ALLOWED_ORIGINS=https://your-frontend-domain.com
# OPENAI_API_KEY=sk-... (or GROQ_API_KEY)