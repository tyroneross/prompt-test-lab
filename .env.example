# =============================================================================
# PROMPT TESTING LAB - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=development
PORT=4001
APP_URL=http://localhost:4001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite)
DATABASE_URL=file:./dev.db

# Production (PostgreSQL via Supabase or self-hosted)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Authentication
JWT_SECRET=your-jwt-secret-minimum-32-characters

# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# GitHub OAuth
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Resend (for magic link emails)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_ADDRESS=noreply@yourdomain.com

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Groq
GROQ_API_KEY=your-groq-api-key

# Local LLM (optional)
LOCAL_LLM_URL=http://localhost:11434

# =============================================================================
# CACHING & SESSIONS
# =============================================================================
# Redis (optional - falls back to memory if not provided)
REDIS_URL=redis://localhost:6379

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================
# Logflare (for structured logging)
LOGFLARE_API_KEY=your-logflare-api-key
LOGFLARE_SOURCE_TOKEN=your-logflare-source-token

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otlp-endpoint.com
OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer your-token

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# =============================================================================
# SECURITY
# =============================================================================
# API Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000,http://localhost:8002,http://localhost:8001

# JWT Secret for API authentication
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug logging
DEBUG=prompt-lab:*

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# CLOUD DEPLOYMENT (PRODUCTION ONLY)
# =============================================================================
# Vercel
VERCEL_URL=your-vercel-deployment-url.vercel.app
VERCEL_TOKEN=your-vercel-token

# AWS (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=false
ENABLE_LOCAL_LLM=false
ENABLE_CACHING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Maximum request size (bytes)
MAX_REQUEST_SIZE=10485760

# =============================================================================
# TESTING
# =============================================================================
# Test database (use different database for tests)
TEST_DATABASE_URL=file:./test.db

# Playwright configuration
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1
PLAYWRIGHT_BROWSERS_PATH=/tmp/playwright-browsers